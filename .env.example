# PsyAI Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_NAME=PsyAI
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL
DATABASE_URL=postgresql://psyai_user:psyai_password@localhost:5432/psyai_db
DATABASE_ECHO=false

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ============================================================================
# LangChain Configuration
# ============================================================================
# OpenAI (or other LLM provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Alternative LLM providers (uncomment if using)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# COHERE_API_KEY=your-cohere-api-key
# HUGGINGFACE_API_KEY=your-huggingface-api-key

# ============================================================================
# LangSmith Configuration
# ============================================================================
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=psyai-project
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING=true

# ============================================================================
# Centaur Model Configuration
# ============================================================================
# Configure based on Centaur Foundation Model access method
CENTAUR_API_URL=https://api.centaur.example.com
CENTAUR_API_KEY=your-centaur-api-key
CENTAUR_MODEL_VERSION=v1
CENTAUR_TIMEOUT=30
CENTAUR_MAX_RETRIES=3

# ============================================================================
# Vector Database Configuration
# ============================================================================
# Choose one: chroma, pinecone, or weaviate
VECTOR_DB_TYPE=chroma

# Chroma (local)
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Pinecone (cloud)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-environment
# PINECONE_INDEX_NAME=psyai-index

# Weaviate (local or cloud)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# ============================================================================
# Embedding Configuration
# ============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================================================
# RAG Configuration
# ============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# ============================================================================
# Evaluation Configuration
# ============================================================================
EVAL_FAILURE_THRESHOLD=0.7
EVAL_AUTO_TRIGGER=true
EVAL_BATCH_SIZE=10

# ============================================================================
# Human-in-the-Loop Configuration
# ============================================================================
HITL_ENABLED=true
HITL_NOTIFICATION_EMAIL=reviewer@example.com
HITL_NOTIFICATION_WEBHOOK=https://your-webhook.example.com
HITL_AUTO_ASSIGN=true

# ============================================================================
# Confidence Score Configuration
# ============================================================================
CONFIDENCE_MIN_THRESHOLD=0.6
CONFIDENCE_HIGH_THRESHOLD=0.8
CONFIDENCE_CACHE_TTL=3600

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Monitoring and Observability
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (optional)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# ============================================================================
# Development Tools
# ============================================================================
# Seed data for development
SEED_DATABASE=true
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=admin123

# Enable debug toolbar
ENABLE_DEBUG_TOOLBAR=true
